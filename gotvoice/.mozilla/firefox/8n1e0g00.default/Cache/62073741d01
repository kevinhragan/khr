var selected_idx = 0;
var clicked = false;


function detectMacXFF() {
	var ua = navigator.userAgent.toLowerCase();
	if ((ua.indexOf('mac') != -1 && ua.indexOf('firefox') != -1) || ua.indexOf('camino') != -1) {
		return true;
	}
}


/* Firefox on Mac wiggs out when you combine Flash and CSS Opacity. Not that I blame it. */
/* See http://jakeo.org/blog/2007/03/16/css-opacity-and-flash-transparency-in-mac-firefox/ */
function OMGlikeCallMe() {
	if (detectMacXFF()) {
		var overlay = document.getElementById('overlay_modal');
		overlay.style.backgroundImage = "url(http://images.salon.com/img/5things/5t_bg.png)";
		overlay.style.backgroundRepeat = "repeat";
		overlay.style.opacity = '1';
		overlay.style.backgroundColor = 'transparent';
	}
	var ad_divs = $$('.ad_content');
	for (var i = 0; i<ad_divs.length; i++) {
		ad_divs[i].style.visibility = 'hidden';
	}

}

function expandThing(thing_index, thing_url) {
	//WindowUtilities.initLightbox ('lighbox_loadng', 'loading', false, document.body) ;
	if (clicked) return false;
	clicked = true;
	window.clearTimeout(refreshTimeout);

	// register a page view if hitbox has been loaded
	if (typeof _hbPageView == 'function') _hbPageView('comp', thing_url);

	Dialog.info(
		{url: '/mc/5things/expand.html?selected='+thing_index} ,
		{ 
			width: 768,
			left: 184,
			top: 134,
			id: 'lightbox',
			recenterAuto: false,
			onShow: OMGlikeCallMe,
			showProgress: true
		}
	);
	return false;
}

function closeThing() {
	var ad_divs = $$('.ad_content');
	for (var i = 0; i<ad_divs.length; i++) {
		ad_divs[i].style.visibility = 'visible';
	}

	Dialog.closeInfo(); 
	clicked = false;
	refreshTimeout = setTimeout('salonRefresh()', refresh_time);
	return false;
}

function selectThing(thing_index, thing_url) {
	if (thing_index == selected_idx) {
		//document.getElementById('expand_thing_' + thing_index).className = '';
		selected_idx = 0;
	} else {
		document.getElementById('expand_thing_1').className = '';
		document.getElementById('expand_thing_2').className = '';
		document.getElementById('expand_thing_3').className = '';
		document.getElementById('expand_thing_4').className = '';
		document.getElementById('expand_thing_5').className = '';
		document.getElementById('expand_thing_' + thing_index).className = 'on';
		selected_idx = thing_index;
		if (typeof _hbPageView == 'function') _hbPageView('comp', thing_url);
		if (typeof _hbLink == 'function') _hbLink ('5things_'+thing_index+'exp', 'text');
		if ($("right")) $("right").src = $("right").src;
	}
	return false;
}

